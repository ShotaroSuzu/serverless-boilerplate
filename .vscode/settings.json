{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "cSpell.words": [
    "browserslist",
    "esbuild",
    "linebreak",
    "middyfy",
    "Ooops",
    "pinst",
    "postpack",
    "todos"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": ["./packages/client", "./packages/server"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
